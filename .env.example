# TitanovaX Trading System Environment Configuration
# Copy this file to .env and update with your actual values

# Environment Settings
ENVIRONMENT=development
TIMEZONE=UTC

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=titanovax
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# MT5 Broker Configuration
MT5_LOGIN=12345
MT5_PASSWORD=your_mt5_password_here
MT5_SERVER=YourBroker-Server
MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe

# Trading Configuration
DEFAULT_LOT_SIZE=0.1
MAX_RISK_PERCENT=2.0
MAX_POSITIONS=5
STOP_LOSS_PIPS=50
TAKE_PROFIT_PIPS=100

# Machine Learning Configuration
ML_MODEL_TYPE=xgboost
RETRAIN_INTERVAL_HOURS=24
FEATURE_WINDOW=100
PREDICTION_HORIZON=1

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_ENABLED=true

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
API_KEY=your_api_key_here
CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_MAX_FILE_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=60
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Performance Configuration
MAX_WORKERS=4
MEMORY_LIMIT_GB=4.0
CPU_LIMIT_PERCENT=80

# Feature Flags
FEATURE_ML_PIPELINE=true
FEATURE_TELEGRAM_INTEGRATION=true
FEATURE_WEB_DASHBOARD=true
FEATURE_PAPER_TRADING=true
FEATURE_LIVE_TRADING=false
FEATURE_BACKTESTING=true
FEATURE_RISK_MANAGEMENT=true

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# External Services
NEWS_API_KEY=your_news_api_key_here
WEATHER_API_KEY=your_weather_api_key_here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/app/backups

# Development Settings (only for development environment)
DEBUG=true
HOT_RELOAD=true
MOCK_SERVICES=false

# Docker Configuration
DOCKER_NETWORK=titanovax-network
DOCKER_SUBNET=172.20.0.0/16

# Notification Settings
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# Alert Thresholds
ALERT_DRAWDOWN_PERCENT=10
ALERT_DAILY_LOSS_PERCENT=5
ALERT_CPU_PERCENT=90
ALERT_MEMORY_PERCENT=90
ALERT_DISK_PERCENT=90

# Model Configuration
MODEL_UPDATE_INTERVAL_HOURS=6
MODEL_VALIDATION_THRESHOLD=0.6
MODEL_RETRAIN_TRIGGER=0.5

# Data Configuration
DATA_RETENTION_DAYS=365
MARKET_DATA_UPDATE_INTERVAL=60
ECONOMIC_CALENDAR_UPDATE_INTERVAL=3600

# Trading Hours (UTC)
TRADING_START_HOUR=0
TRADING_END_HOUR=24
WEEKEND_TRADING=false

# Risk Limits
MAX_DAILY_TRADES=50
MAX_CONCURRENT_POSITIONS=5
MIN_ACCOUNT_BALANCE=1000
MAX_SLIPPAGE_PIPS=2

# API Rate Limits
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000
RATE_LIMIT_PER_DAY=100000